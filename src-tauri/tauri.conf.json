{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Nevo Terminal",
  "version": "0.1.0",
  "identifier": "com.enrique.nevo-terminal",
  "build": {
    "beforeDevCommand": "npm run dev:vite",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Nevo Terminal",
        "width": 1024,
        "height": 768,
        "minWidth": 400,
        "minHeight": 300,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
